<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!-- ================ Lunar Rock ================ -->

  <ThingDef ParentName="UglyRockBase" Name="LunarBase">
    <defName>LunarRock</defName>
    <label>lunar rock</label>
    <description>Simple moon rock.</description>
    <graphicData>
      <color>(170,170,170)</color>
    </graphicData>
    <statBases>
      <MaxHitPoints>450</MaxHitPoints>
      <Beauty>-1</Beauty>
    </statBases>
    <building>
      <mineableThing>ChunkLunar</mineableThing>
      <mineableDropChance>0.25</mineableDropChance>
      <smoothedThing>SmoothedLunar</smoothedThing>
    </building>
  </ThingDef>

  <ThingDef ParentName="LunarBase">
    <defName>SmoothedLunar</defName>
    <label>smoothed lunar</label>
    <description>A soft metamorphic rock. This semi-transparent rock almost appears to glow with its own inner light.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockSmooth_Atlas</texPath>
    </graphicData>
    <statBases>
      <Beauty>2</Beauty>
      <MarketValue>25</MarketValue>
    </statBases>
    <building>
      <isNaturalRock>false</isNaturalRock>
      <canBuildNonEdificesUnder>true</canBuildNonEdificesUnder>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
      <smoothedThing />
    </building>
    <saveCompressible>false</saveCompressible>
    <repairEffect>Repair</repairEffect>
  </ThingDef>
  
  <ThingDef ParentName="ChunkRockBase">
    <defName>ChunkLunar</defName>
    <label>lunar chunk</label>
    <graphicData>
      <color>(170,170,170)</color>
    </graphicData>
    <statBases>
      <Mass>25</Mass>
    </statBases>
    <soundDrop>ChunkRock_Drop</soundDrop>
    <butcherProducts>
      <BlocksLunar>20</BlocksLunar>
    </butcherProducts>
  </ThingDef>

  <ThingDef ParentName="StoneBlocksBase">
    <defName>BlocksLunar</defName>
    <label>lunar blocks</label>
    <description>Blocks of solid lunar.</description>
    <graphicData>
      <color>(170,170,170)</color>
    </graphicData>
    <statBases>
      <Mass>1.25</Mass>
    </statBases>
    <stuffProps>
      <color>(170,170,170)</color>
      <soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <stuffAdjective>lunar</stuffAdjective>
      <statFactors>
        <Beauty>1.35</Beauty>
        <MaxHitPoints>1.2</MaxHitPoints>
        <WorkToBuild>5.5</WorkToBuild>
        <WorkToMake>1.15</WorkToMake>
      </statFactors>
      <statOffsets>
        <Beauty>1</Beauty>
      </statOffsets>
    </stuffProps>
  </ThingDef>

  <RecipeDef ParentName="MakeStoneBlocksBase">
    <defName>Make_StoneBlocksLunar</defName>
    <label>make lunar blocks</label>
    <description>Cuts lunar chunks into usable blocks.</description>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChunkLunar</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ChunkLunar</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <BlocksLunar>20</BlocksLunar>
    </products>
  </RecipeDef>
</Defs>